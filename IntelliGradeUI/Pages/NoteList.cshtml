@page
@model IntelliGradeUI.Pages.NoteListModel
@{
}


<div class="col-8 mx-auto fs-2">
    Ödevi veren öğretmen
    <div class="dropdown-divider border-2 mb-4"></div>
</div>
<div class="col-8 mx-auto justify-content-center d-flex mb-4">
    <div class="card w-100 border-0" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item pb-3 pt-3 fs-5 d-flex align-items-center">
                <div class="row w-100">
                    <div class="col-12">
                        <i class="fa-solid fa-user border border-2 rounded-circle p-2 border-dark me-3 text-white bg-dark"></i>
                        @(Model.teacher != null ? Model.teacher.nameSurname : "")
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="col-8 mx-auto fs-2">
    Öğrenciler
    <div class="dropdown-divider border-2 mb-4"></div>
</div>
<div class="col-8 mx-auto justify-content-center d-flex">
    <div class="card w-100 border-0" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            @{
                if (Model.assignment != null)
                    for (int i = 0; i < Model.assignment.uploadedHomeworks.Count(); i++)
                    {
                        <li class="list-group-item pb-3 pt-3 fs-5 d-flex align-items-center">
                            <div class="row w-100">
                                <div class="col-12 col-md-4 d-flex justify-content-start">
                                    <i class="fa-solid fa-user border border-2 rounded-circle p-2 border-dark me-3 text-white bg-dark h-min"></i>
                                    @Model.students[i].nameSurname
                                </div>
                                <div class="col-6 col-md-4 d-flex justify-content-center mt-3 mt-md-0 h-min">
                                    <span class=" border border-1 rounded-2 p-1 fs-6 bg-success text-light">
                                        @*@Model.assignment.uploadedHomeworks[i].grade*@
                                        Notu: 100
                                    </span>
                                </div>
                                <div class="col-6 col-md-4 d-flex justify-content-center justify-content-md-end mt-3 mt-md-0 h-min">
                                    <a href="@Model.assignment.uploadedHomeworks[i].fileUrl">
                                        <button class="btn btn-primary">
                                            Ödevi İndir
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
            }
        </ul>
    </div>
</div>

<div class="col-4 offset-8 mt-5 mb-4">
    <button class="btn btn-success">
        Tüm Notları İndir
    </button>
</div>
