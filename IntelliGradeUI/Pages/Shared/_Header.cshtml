@{
    string pageName = ViewContext.RouteData.Values["page"].ToString();
}

<header class="sticky-top">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand flex-grow-1" asp-area="" asp-page="/Index"><i class="fa-solid fa-house"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav align-items-end">
                    <li class="nav-item tab @(pageName == "/Index" ? "tab-active" : "")">
                        <a class="nav-link text-black" asp-page="/Index"><span>Home</span></a>
                    </li>
                    <li class="nav-item tab @(pageName == "/Privacy" ? "tab-active" : "")">
                        <a class="tab nav-link text-black" asp-page="/Privacy"><span>Privacy</span></a>
                    </li>
                    <li class="nav-item tab @(pageName == "/NoteList" ? "tab-active" : "")">
                        <a class="tab nav-link text-black" asp-page="/NoteList"><span>Note List</span></a>
                    </li>
                </ul>
            </div>
            @{
                if (false)
                {
                    <ul class="navbar-collapse collapse navbar-nav flex-grow-1 align-items-end justify-content-end">
                        <li class="nav-item dropdown justify-content-end align-items-end">
                            <a class="d-flex justify-content-end align-items-center nav-link dropdown-toggle text-black" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                User Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-black" href="#">Log Out</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-collapse collapse navbar-nav flex-grow-1 align-items-end justify-content-end">
                        <li class="nav-item">
                            <a class="d-flex nav-link text-black" role="button" asp-page="/Login">
                                <span class="login-btn d-flex">
                                    Login
                                    <i class="ms-1 align-items-center d-flex fa-solid fa-right-to-bracket"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                }
            }

        </div>
    </nav>
</header>